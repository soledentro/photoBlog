<h2 style="color: rgb(19, 180, 126);">Your blog</h2>

<div class="d-flex justify-content-center">
    <form class="d-flex flex-column align-item-center" action="photobook" method="POST">
        <div class="mb-2">
            <input name="photo" placeholder="Link your photo..." type="text" class="form-control">
        </div>
        <div class="mb-2">
            <input name="post" placeholder="Your text" type="text" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary"
            style="background-color: rgb(19, 180, 126); border: none">Отправить</button>
    </form>
</div>

<hr />

<div class="d-flex justify-content-center">
    {{#each listOfPosts}}
    <div class="card my-3 mx-3" style="width: 300px; height: 450px; border-radius: 15px;">
        <img src="{{this.photo}}" class="photo"
            style="width: 300px; height: 300px; border-radius: 15px; object-fit: cover" alt="photo" />
        <div class="card-body" style="overflow-y: auto">
            <p class="card-text">{{this.post}}</p>
        </div>
    </div>
    {{/each}}
</div>