<h1>Your blog</h1>

<div class="d-flex justify-content-center">
    <form class="d-flex flex-column align-item-center" action="photobook" method="POST">
        <div class="mb-3">
            <input name="photo" placeholder="Link your photo..." type="text" class="form-control">
        </div>
        <div class="mb-3">
            <input name="post" placeholder="Your text" type="text" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Отправить</button>
    </form>
</div>

<hr />

<div class="d-flex justify-content-center">
    {{#each listOfPeople}}
    <div class="card my-3" style="width: 18rem;">
        <div class="card-body">
            <img src="{{this.photo}}" class="photo" alt="photo" />
            <h5 class="card-title">{{this.photo}}</h5>
            <p class="card-text">{{this.post}}</p>
        </div>
    </div>
    {{/each}}
</div>